/***********
 * Sidebar *
 ***********/
.sidebar {
	@include fill(normal, $alpha3, $header);
	&:backdrop {
		@include fill(normal, $alpha3, $header);
	}
	label:backdrop {
		color: inherit;
	}
	list {
	}
}
row {
	padding: 10px 4px;
	> label {
		padding-left: 6px;
		padding-right: 6px;
	}
	&:selected > label {
		padding-left: 9px;
	}
	&.needs-attention > label {
		@extend %needs_attention;
		background-size: 6px 6px, 0 0;
	}
}
