
/*********
 * Paned *
 *********/
paned {
	> separator {
		border: 1px solid if($variant==light, $white, $dark1);
		&:backdrop {
			border: 1px solid if($variant==light, darken($white, $beta1), darken($dark1, $beta1));
		}
	}
}

